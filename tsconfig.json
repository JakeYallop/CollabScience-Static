{
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "ES2016",
        "outDir": "src/js",

        /* Linting */
        "strict": true,
        "noFallthroughCasesInSwitch": true,

        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["**/*.ts"],
    "exclude": ["./src/js"]
}
